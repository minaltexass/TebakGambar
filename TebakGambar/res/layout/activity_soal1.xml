<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AAA1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/margin_top"
    tools:context="com.startx.tebakgambar.Soal1Activity$PlaceholderFragment" >

<ImageView
        android:id="@+id/imgtebak"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/mouse_komputer" />

    <EditText
        android:id="@+id/isisoal1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imgtebak"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="JAWAB DI SINI"
        android:paddingLeft="10dp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/jawab1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imgtebak"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/isisoal1"
        android:background="#ef7918"
        android:onClick="CekJawaban1"
        android:text="Cek"
        android:textColor="#fcfbfa"
        android:textStyle="italic"
        android:typeface="monospace" />

</RelativeLayout>
