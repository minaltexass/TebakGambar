<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AAA1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.startx.tebakgambar.LevelMenu" >

    <Button
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#ef7918"
        android:text="Level 1"
        android:textColor="#fcfbfa"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageButton
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignRight="@+id/level1"
        android:layout_below="@+id/level1"
        android:layout_marginTop="10dp"
        android:background="#ef7918"
        android:src="@drawable/level" />

    <ImageButton
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level2"
        android:layout_alignRight="@+id/level2"
        android:layout_below="@+id/level2"
        android:layout_marginTop="10dp"
        android:background="#ef7918"
        android:src="@drawable/level" />

</RelativeLayout>
