<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AAA1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.startx.tebakgambar.MainActivity" >

    <TextView
        android:id="@+id/cara1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cara1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imgcara1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cara1"
        android:src="@drawable/cara1" />

    <TextView
        android:id="@+id/cara2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgcara1"
        android:text="@string/cara2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imgcara2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cara2"
        android:src="@drawable/cara2" />

    <TextView
        android:id="@+id/cara3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgcara2"
        android:text="@string/cara3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

  

</RelativeLayout>
